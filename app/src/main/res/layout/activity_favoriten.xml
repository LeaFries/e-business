<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoritenActivity">

    <ImageView
        android:id="@+id/btn_herz5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="333dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="312dp"
        android:contentDescription="@string/favoriten"
        android:gravity="center"
        android:padding="18dp"
        android:src="@drawable/heart_icon_foreground"
        app:layout_constraintBottom_toTopOf="@+id/btn_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="512dp"
        android:layout_height="69dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="488dp"
        android:background="@drawable/heart_icon_background"
        android:backgroundTint="@color/green"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/Favoriten"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_scanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/btn_herz"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="333dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="248dp"
        android:contentDescription="@string/favoriten"
        android:gravity="center"
        android:padding="18dp"
        android:src="@drawable/heart_icon_foreground"
        app:layout_constraintBottom_toTopOf="@+id/btn_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listViewFavoriten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" />

    <ImageView
        android:id="@+id/btn_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/round_btn"
        android:contentDescription="@string/favoriten"
        android:gravity="center"
        android:onClick="openFavoriten"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_home"

        />

    <ImageView
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/round_btn"
        android:contentDescription="@string/map"
        android:gravity="center"
        android:onClick="openMap"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_add_location_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_home"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/btn_scanner"

        />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_btn"
        android:contentDescription="@string/home"
        android:gravity="center"
        android:onClick="openHomescreen"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_home_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_search"

        />

    <ImageView
        android:id="@+id/btn_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_qr_code_scanner_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_favorite" />
    app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


